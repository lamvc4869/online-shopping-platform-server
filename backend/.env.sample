# ==============================================
# FFW SERVER - ENVIRONMENT VARIABLES
# ==============================================
# Hướng dẫn: Copy file này thành .env và điền các giá trị thực
# Command: cp .env.sample .env

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Port cho Backend API
PORT_BE=

# Port cho Frontend (để cấu hình CORS)
PORT_FE=

# Node Environment (development | production)
NODE_ENV=

# ==============================================
# DATABASE - MONGODB
# ==============================================
# Local MongoDB
MONGODB_URI=
MONGO_URL=

# ==============================================
# REDIS CACHE & SESSION
# ==============================================
# Local Redis (Development)
REDIS_URL=redis://localhost:6379


# ==============================================
# JWT TOKEN CONFIGURATION
# ==============================================
# Secret key cho Access Token (ít nhất 32 ký tự random)
# Tạo random: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Thời gian hết hạn Access Token (ví dụ: 15m, 1h, 2d, 7d)
ACCESS_TOKEN_EXPIRES=1h

# Thời gian hết hạn Refresh Token (đơn vị: phút)
# 1440 = 1 ngày | 10080 = 7 ngày | 43200 = 30 ngày (recommended)
REFRESH_TOKEN_EXPIRES=43200

# Secret keys riêng cho User và Admin
USER_ACCESS_TOKEN_SECRET=your_user_access_token_secret_here
ADMIN_ACCESS_TOKEN_SECRET=your_admin_access_token_secret_here

# ==============================================
# CLOUDINARY - IMAGE STORAGE
# ==============================================
# Đăng ký tài khoản tại: https://cloudinary.com/
# Lấy thông tin từ Dashboard > Account Details

# Cloudinary Cloud Name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API Key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API Secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==============================================
# ADMIN ACCOUNT CREATION
# ==============================================
# Secret key để tạo tài khoản Admin
# Chỉ những người có key này mới tạo được admin account (role = 1)
ADMIN_CREATION_SECRET=your_admin_creation_secret_here
